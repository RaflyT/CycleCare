<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#C53938"
    tools:context=".ScheduleFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:orientation="vertical">

        <TextView
            android:id="@+id/textView10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Maintenance Schedule"
            android:drawableEnd="@drawable/baseline_notifications_24"
            android:fontFamily="@font/montserratbold"
            android:textAlignment="center"
            android:textSize="16sp"/>

        <ImageView
            android:id="@+id/imageView13"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:src="@drawable/maintenance" />

        <EditText
            android:id="@+id/editTextNumber"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:ems="10"
            android:textSize="24sp"
            android:fontFamily="@font/montserratbold"
            android:textAlignment="center"
            android:text="2  7  2  1  9  9"
            android:inputType="number" />

        <TextView
            android:id="@+id/textView20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Oil change prediction"
            android:fontFamily="@font/montserratbold"
            android:textAlignment="center"
            android:textSize="16sp"
            />

        <TextView
            android:id="@+id/textView21"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserratregular"
            android:textAlignment="center"
            android:textSize="24sp"
            android:text="23 November 2023" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardBackgroundColor="#F5F5F5"
            android:layout_marginTop="18dp"
            app:cardCornerRadius="30dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/et_searchschedule"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginStart="20dp"

                    android:layout_marginEnd="20dp"
                    android:textColorHint="#80000000"
                    android:backgroundTint="@color/white"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/linearLayout">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/searchschedule"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/costum_edittextsearch"
                        android:drawableLeft="@drawable/baseline_search_24"
                        android:drawablePadding="8dp"
                        android:fontFamily="@font/montserratregular"
                        android:hint="Find schedule"
                        android:padding="8dp"
                        android:textColor="@color/black"

                        />

                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:id="@+id/textView22"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:layout_marginStart="18dp"

                    android:fontFamily="@font/montserratbold"
                    android:text="Friday, 17 November 2023"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/textView23"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/montserratregular"
                    android:layout_marginStart="18dp"
                    android:text="4 days left"
                    android:textColor="#80000000"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView16"
                        android:layout_width="wrap_content"
                        android:layout_height="180dp"
                        android:layout_weight="1"
                        android:src="@drawable/sche" />

                    <ImageView
                        android:id="@+id/imageView17"
                        android:layout_width="wrap_content"
                        android:layout_height="180dp"
                        android:layout_weight="1"
                        android:src="@drawable/sche" />
                </LinearLayout>

                <TextView
                    android:id="@+id/textView24"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:layout_marginStart="18dp"

                    android:fontFamily="@font/montserratbold"
                    android:text="Saturday, 18 November 2023"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/textView25"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_marginStart="18dp"
                    android:fontFamily="@font/montserratregular"
                    android:text="5 days left"
                    android:textColor="#80000000" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView18"
                        android:layout_width="wrap_content"
                        android:layout_height="180dp"
                        android:layout_weight="1"
                        android:src="@drawable/sche"
                        android:layout_gravity="left"/>
                </LinearLayout>


            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</FrameLayout>